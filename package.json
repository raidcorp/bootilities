{
  "name": "bootilities",
  "author": "Thiago Majesk Goulart",
  "license": "AGPL-3.0",
  "version": "0.2.0",
  "description": "A set of utilities generated with Bootstrap 5 to mimic Tailwind CSS functional paradigm",
  "scripts": {
    "release": "npm-run-all sync-vendor build-dev build-prod",
    "build-dev": "sass --style expanded --source-map --no-error-css --embed-sources scss/bootilities.build.scss dist/css/bootilities.css",
    "build-prod": "sass --style compressed --source-map --no-error-css --embed-sources scss/bootilities.build.scss dist/css/bootilities.min.css",
    "sync-vendor": "sh ./sync-vendor.sh"
  },
  "devDependencies": {
    "bootstrap": "^5.0.0",
    "npm-run-all": "^4.1.5",
    "sass": "^1.32.8"
  }
}
