{
  "name": "bootilities",
  "description": "A set of utilities generated with Bootstrap 5 to mimic Tailwind CSS functional paradigm",
  "version": "0.3.1",
  "keywords": [
    "bootstrap",
    "utility css",
    "utility first",
    "css",
    "sass",
    "front-end",
    "framework",
    "web"
  ],
  "author": "Thiago Majesk Goulart",
  "license": "AGPL-3.0",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/thiagomajesk/bootilities.git"
  },
  "style": "dist/css/bootilities.css",
  "sass": "scss/bootilities.scss",
  "scripts": {
    "release": "npm-run-all --parallel build-dev build-prod",
    "build-dev": "sass --style expanded --source-map --no-error-css --embed-sources scss/bootilities-utilities.scss dist/css/bootilities.css",
    "build-prod": "sass --style compressed --source-map --no-error-css --embed-sources scss/bootilities-utilities.scss dist/css/bootilities.min.css",
    "watch": "sass --watch scss/bootilities-utilities.scss dist/css/bootilities.css"
  },
  "devDependencies": {
    "bootstrap": "^5.0.0",
    "npm-run-all": "^4.1.5",
    "sass": "^1.32.8"
  },
  "peerDependencies": {
    "bootstrap": "^5.0.0"
  }
}
